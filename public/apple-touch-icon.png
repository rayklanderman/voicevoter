  <!-- Microphone Stand -->
  <rect x="86" y="147" width="8" height="20" fill="url(#iconGradient)"/>
  
  <!-- Microphone Base -->
  <ellipse cx="90" cy="172" rx="20" ry="4" fill="url(#iconGradient)"/>
  
